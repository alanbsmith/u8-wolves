---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="hero">
  <img
    src="/u8-wolves/wolves-crest.svg"
    class="hero__crest"
    alt="wolves soccer crest"
  />
  <h1 class="hero__title">{title}</h1>
</section>
<style>
  .hero {
    background-color: var(--color-bg-005);
    border-bottom: 0.125rem solid var(--color-accent-050);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: flex-end;
    padding: 1rem;
    position: sticky;
    top: -13rem;
  }

  .hero__crest {
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    height: 12rem;
    width: auto;
  }

  .hero__title {
    color: var(--color-text-100);
    font-size: 2.25rem;
    font-weight: bold;
    margin: 0;
    top: 0;
  }
</style>
