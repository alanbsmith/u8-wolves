---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";
---

<Layout title="U8 Wolves SC">
  <Nav />
  <main>
    <section class="home">
      <img
        src="/u8-wolves/wolves-crest.svg"
        class="home__crest"
        alt="wolves soccer crest"
      />
      <h1 class="home__title">U8 Wolves SC</h1>
    </section>
  </main>
</Layout>

<style>
  .home {
    align-items: center;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100vh;
    justify-content: center;
    max-height: -webkit-fill-available;
    padding: 1rem;
  }

  .home__crest {
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    height: 20rem;
    width: auto;
  }

  .home__title {
    color: var(--color-text-100);
    font-size: 2.5rem;
  }
</style>
